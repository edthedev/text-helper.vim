import optparse

parser = optparse.OptionParser()
parser.add_option("-l", "--list", action="store_true", default=False, help="List the    items in the inbox and then exit.")
(options, args) = parser.parse_args()

def toBar(number):
	if number == 0:
		return ' 0 [  Zero!  ]'
	FULL = '.'
	if number > 10:
		FULL = '*'
	if number > 100:
		FULL = '#'
	if number > 1000:
		FULL = '%'
	EMPTY = ' '
	display_number = '%d' % number
	if number < 10:
		display_number = ' %d' % number
	result ='%s [' % display_number
	while number > 10:
		number = number / 10
	if number <= 10:
		for i in range(1,10):
			if i<=number:
				result+=FULL
			else:
				result+=EMPTY
	result+= ']'
	return result

output = ''
for arg in args:
	x = None
	try:
		x = int(arg)
	except:
		output += arg + ' '	
	if x != None:
		output += toBar(x) + ' '

print output
