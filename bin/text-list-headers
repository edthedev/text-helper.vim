import re
import sys

# import ClassInspector

# parser = optparse.OptionParser()
# (options, args) = parser.parse_args()

# The hardcore way...
# for arg in args:
# Load the class
# 	if '.py' in arg:
# 		arg = arg.replace('.pyc', '').replace('.py', '')
# 	myclass = __import__(arg) 
##  List its methods.
# 	print ClassInspector.getMethods(myclass)

args = sys.argv[1:]

# print args
headers = [
  'h1', 'h2', 'h3', 'h4', 'h5', 'h6',
]
for arg in args:
  print "Headers for " + arg
  f = open(arg, 'r')
  lines = f.readlines()
  print arg + "has " + str(len(lines)) + " lines."
  f.close()
  for line in lines:
    for header in headers:
      if header in line:
        print line
